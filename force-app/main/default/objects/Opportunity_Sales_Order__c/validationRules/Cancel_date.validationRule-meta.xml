<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cancel_date</fullName>
    <active>true</active>
    <description>Date Cancelled requited when a negative quantity</description>
    <errorConditionFormula>AND( Quantity__c &lt; 0, ISBLANK(Date_Cancelled__c))</errorConditionFormula>
    <errorMessage>Please include Date Cancelled</errorMessage>
</ValidationRule>
